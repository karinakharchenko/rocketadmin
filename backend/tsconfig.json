{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "references": [
    { "path": "../shared-code" },
    { "path": "../private-modules" }
],
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "../node_modules"]
}
